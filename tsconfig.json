{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "esnext",
        "declaration": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["DOM"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": ["node"]
    },
    "include": [
        "./source/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
